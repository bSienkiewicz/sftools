{
  "manifest_version": 3,
  "name": "SF Tools",
  "version": "0.5.0.1",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "cookies",
    "scripting"
  ],
  "host_permissions": [
    "*://auctane.pagerduty.com/*",
    "*://raw.githubusercontent.com/*"
  ],
  "background": { "service_worker": "src/background.js", "type": "module", "persistent": true },
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.force.com/*"
      ],
      "js": [
        "src/content/new-incident/NewIncidentPageDetector.jsx",
        "src/TemplateContent.jsx",
        "src/content/seven-days/SevenDays.jsx"
      ],
      "run_at": "document_idle"
    }
  ]
}